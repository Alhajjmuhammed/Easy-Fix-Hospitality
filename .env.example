# Django Settings
# ================
# REQUIRED: Generate a strong secret key for production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ======================
# For development (SQLite - default if not set)
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL - recommended)
DATABASE_NAME=restaurant_db
DATABASE_USER=restaurant_user
DATABASE_PASSWORD=your-secure-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration (Required for production)
# =============================================
# Used for Django Channels (WebSockets) and caching
REDIS_HOST=localhost
REDIS_PORT=6379
# IMPORTANT: Set a strong password for Redis in production
# Leave empty for local development without Redis auth
REDIS_PASSWORD=

# Email Configuration (Optional)
# ==============================
# For password reset and notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings (Production)
# ==============================
# Set these to True in production
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# CORS Settings (If needed for API access)
# ========================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Application Settings
# ====================
# Default timezone
TIME_ZONE=UTC

# Default language
LANGUAGE_CODE=en-us

# Static Files (Production)
# =========================
# Path for collected static files
STATIC_ROOT=/var/www/restaurant/static/

# Media Files (Production)
# ========================
# Path for uploaded files
MEDIA_ROOT=/var/www/restaurant/media/
